{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "rootDir": "./src",
        "declaration": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src",
        "SharedModuleCachePlugin.js"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}